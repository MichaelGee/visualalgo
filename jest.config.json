{
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "moduleDirectories": [
        "src",
        "node_modules"
    ],
    "moduleNameMapper": {
        "^@app(.*)$": "<rootDir>/src$1",
        "\\.(css)$": "identity-obj-proxy"

    },
    "transform": {
        "^.+\\.css$": "jest-transform-css",
        "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "testMatch": [
        "**/__tests__/*.(ts|tsx|js)"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transformIgnorePatterns": ["<rootDir>/node_modules/"]
}